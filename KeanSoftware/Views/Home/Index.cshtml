.header {
       background: url(https://drive.google.com/file/d/1WlyDsqbu2kWS-VcDIVH2wlnz6HztYpJL/view?usp=drive_link) repeat-x center center;
        background-size: cover;
        text-align: center;
        align-content: center;
        background-repeat: repeat-x;
        background-size: 100% 100%;
        min-width: 100vh;
    }

    .flex {
        display: flex;
        justify-content: space-between;
    }
    .container {
        margin: 0 auto;
        max-width: 1200px;
        padding: 0 10px;
    }

    .header .container {
        position: relative;
        top: 0px;
    }
    .containerHorizontal{
        display: flex;
        justify-content: space-between; /* Adjusts spacing between items */
    }
    .containerScrollHorizontal{
        display: grid;
        grid-auto-flow: column;
        justify-content: space-between; /* Adjusts spacing between items */
        overflow-x: scroll;
        overflow-y: hidden;
        height: 600px;
        white-space: nowrap;
        background: linear-gradient(-45deg, #1a1a1a 40%, #4F3745 100%);
        width:200vw;
        justify-content: center;
        align-items: center;
        transform: translate(-30%,5%);
    }   
    .containerButton{
        display: inline-block;
        position: relative;
        text-align: center;
        color: white;
        flex: 0  1 auto; /* Each item takes up equal space */
        padding: 10px;

    }

    .centeredText {
        width:500px;
        position: absolute;
        top: 0%;
        left: 0%;
        white-space: pre-wrap;

    }

    ::-webkit-scrollbar {
        width: 20px;
        border-radius: 10px;
    }


    /* Track */
    ::-webkit-scrollbar-track {
        background: black;
    }

    /* Handle */
    ::-webkit-scrollbar-thumb {
        background: linear-gradient(-45deg, #E101A9, red 50%, blue 90%, green 100%);
        outline-color:ghostwhite;
        outline-width:5px;
        overflow-x:hidden;
        border-radius: 10px;
    }

        /* Handle on hover */
        ::-webkit-scrollbar-thumb:hover {
            background: linear-gradient(-45deg, #E101A9, ghostwhite 100%);
        }

</style>
