@model KeanSoftware.Models.Lesson2
<style>

    /* width */
    ::-webkit-scrollbar {
        width: 5px;
    }

    /* Track */
    ::-webkit-scrollbar-track {
        box-shadow: inset 0 0 5px black;
        border-radius: 10px;
        scroll-margin-inline-start: 1rem;
    }

    :root {
        --background-color: black;
        --text-color: hsl(0, 0%, 100%);

    }

    .Title {
        font-size: 200px;
        text-align: center;
        font-family: "Spicy Rice", serif;
        font-style: normal;

        color: ghostwhite;
        text-shadow: 2px 2px 20px black;
        text-decoration-color: red;
    }

    h1 {
        font-size: 70px;
        text-align: center;
        font-family: "Spicy Rice", serif;
        color: ghostwhite;
        font-style: italic;
        text-shadow: 2px 2px 20px orangered;
        text-decoration-color: red;
    }

    .spicy-rice-regular {
        font-family: "Spicy Rice", serif;
        font-weight: 400;
        font-style: normal;
    }

    body {
        background-image: linear-gradient(-45deg, orangered 0%, orangered 25%, blue 51%, white 100%);
    }

    .img {
        height: 125px;
        width: 250px;
        image-shadow: 2px 2px 20px orangered;
    }

    .buttons {
        display: flex;
        flex-direction: column; /* Stack buttons vertically */
    }

    .text {
        margin-left: 60px; /* Space between text and buttons */
        width: 50vw;
        height: 500px;
        border: 5px solid black;
        background-color: black;
    }

    .container {
        display: flex;
        align-items: flex-start; /* Align items to the top */
    }
</style>
<html>
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Spicy+Rice&display=swap" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body style="background: linear-gradient(to right, orangered, blue, red);
">
<center>
        @{
            int videos = 0;string video = "video ";
        }
        <div class="Title" style="position:absolute; left:0vw; margin-top:-60px;">
        @Model.name
            <h1 style="font-size: 35px">@Model.description</h1>
        @for(int i = 0; i < Model.filesNames.Length; i++){
                
                <ul style="margin:-5; padding: -5;">
                @if (Model.filesNames[i] == "Youtube 1" || Model.filesNames[i] == "Youtube 2" || Model.filesNames[i] == "Youtube 3")
                {
                    videos++;
                    video =  "video " + videos;
                        <button style=" margin:0;padding:0; height:100px;width:500px;background-color:orangered; text-shadow: 2px 2px 20px red; outline-color: black; outline-width: 30px;">
                        <h1 style="font-size: 70px; color:ghostwhite ">
                            @Html.ActionLink(Model.filesNames[i], "Link", new { _link = Model.fileContents[i], _linkName = "Youtube", _x = 1920, _y = 1080 })
                        </h1>
                    </button>
                }
                @if (Model.filesNames[i] == "Game 1" || Model.filesNames[i] == "Game 2")
                {
                    videos++;
                    video = "video " + videos;
                        <button style=" margin:0;padding:0; height:100px;width:500px;background-color:black; text-shadow: 2px 2px 20px red; outline-color: black; outline-width: 30px;">
                            <h1 style="font-size: 70px; color:ghostwhite ">
                            @Html.ActionLink(Model.filesNames[i], "Link", new { _link = Model.fileContents[i], _linkName = "Youtube", _x = 1920, _y = 1200 })
                        </h1>
                    </button>
                }
                </ul>
            }
    </div>
    </div>
    </center>


</body>
</html>